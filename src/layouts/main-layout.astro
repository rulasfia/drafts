---
import "../assets/styles.css";

const { title, description } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ?? "Drafts | Khoirul Asfian"}</title>
		<meta
			name="description"
			content={description ?? "Where I write about my thoughts"}
		/>
	</head>
	<body
		class="text-neutral-900 bg-neutral-50 font-sans antialiased dark:bg-neutral-800 dark:text-neutral-50"
	>
		<slot />
	</body>

	<!-- Cloudflare Web Analytics -->
	<script
		defer
		src="https://static.cloudflareinsights.com/beacon.min.js"
		data-cf-beacon='{"token": "16fba978d699484a9e76666c87f6bb55"}'
	></script><!-- End Cloudflare Web Analytics -->
</html>
